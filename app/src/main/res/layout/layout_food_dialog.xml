<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/txvHowManyGramms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txvGramms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txvHowManyGramms" />

    <ImageView
        android:id="@+id/imgPlus"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:src="@drawable/ic_plus"
        app:layout_constraintBottom_toBottomOf="@id/txvGramms"
        app:layout_constraintLeft_toRightOf="@id/txvGramms"
        app:layout_constraintTop_toTopOf="@id/txvGramms" />

    <ImageView
        android:id="@+id/imgMinus"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:src="@drawable/ic_remove"
        app:layout_constraintBottom_toBottomOf="@id/txvGramms"
        app:layout_constraintRight_toLeftOf="@id/txvGramms"
        app:layout_constraintTop_toTopOf="@id/txvGramms" />

</androidx.constraintlayout.widget.ConstraintLayout>

